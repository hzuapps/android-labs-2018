<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.huzapps.androidlabs.soft1614080902144.Soft1614080902144Activity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_view"
        android:background="@drawable/soft1614080902144"
        />
    <Button
        android:id="@+id/downpt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:text="下载图片"
        android:textColor="#FFFFFFFF" />
    <ImageView
        android:id="@+id/imageView0"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:background="@drawable/soft1614080902144"
        />
    <EditText
        android:id="@+id/imagepath"
        android:layout_width="276dp"
        android:layout_height="47dp"

        android:layout_centerHorizontal="true"

        android:text="http://pic36.photophoto.cn/20150711/0005018718403003_b.png"
        android:textColor="#000000" />

</RelativeLayout>
