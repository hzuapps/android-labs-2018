<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#595c3b"
    tools:context=".Soft1614080902144Activity3">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:background="@drawable/img_2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
 />

    <Button
        android:id="@+id/button_4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"
        android:background="#00000000"
        android:text="学号"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_5"
        android:layout_width="101dp"
        android:layout_height="50dp"
        android:layout_below="@+id/button_4"
        android:background="#00000000"
        android:text="姓名"
        android:textSize="24sp" />


    <Button
        android:id="@+id/button_6"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="提交"
        android:background="@drawable/radius_shape"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/button_"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="#00000000"
        android:text="退出"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="443dp" />
    <Button
        android:id="@+id/button_8"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="查看"
        android:background="#00000000"
        android:layout_toRightOf="@id/button_6"
        android:layout_alignParentBottom="true" />
    <EditText
        android:id="@+id/edit_text3"
        android:layout_width="276dp"
        android:layout_height="51dp"
        android:textColor="#000000"
        android:layout_marginTop="150dp"
        android:layout_toRightOf="@id/button_4" />

    <EditText
        android:id="@+id/edit_text4"
        android:layout_width="276dp"
        android:layout_height="47dp"
        android:textColor="#000000"
        android:layout_below="@id/edit_text3"
        android:layout_toRightOf="@id/button_5" />

    <RadioGroup
        android:id="@+id/check_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_5"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="出勤"
            android:textSize="24sp"
            android:id="@+id/chuqin_radio_button"/>

        <RadioButton
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="旷课"
            android:textSize="24sp"
            android:id="@+id/kuangke_radio_button"/>

        <RadioButton
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="请假"
            android:textSize="24sp"
            android:id="@+id/qingjia_radio_button"/>



    </RadioGroup>

</RelativeLayout>