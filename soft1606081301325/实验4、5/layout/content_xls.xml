<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.asus.resourcemanager.xlsActivity"
    tools:showIn="@layout/activity_xls">

    <TableLayout
        android:id="@+id/xlsTableLayout01"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <TableRow
            android:id="@+id/xlstableRow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/xlstupian_01"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:background="@drawable/xls" />

            <TextView
                android:id="@+id/xlswenjian01"
                android:layout_width="280dp"
                android:layout_height="100dp"
                android:textSize="27dp"
                android:textColor="#110700"
                android:text="报名表.xls
                  2018年5月1日            晚上 08:47 76.20KB" />

        </TableRow>

        <TableRow
            android:id="@+id/xlstableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/xlstupian_02"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:background="@drawable/xls" />

            <TextView
                android:id="@+id/xlswenjian02"
                android:layout_width="280dp"
                android:layout_height="100dp"
                android:textSize="27dp"
                android:textColor="#110700"
                android:text="工资表.xls
                  2018年4月30日            凌晨 02:47 32.22KB" />

        </TableRow>

        <TableRow
            android:id="@+id/xlstableRow3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/xlstupian_03"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:background="@drawable/xls" />

            <TextView
                android:id="@+id/xlswenjian03"
                android:layout_width="280dp"
                android:layout_height="100dp"
                android:textSize="27dp"
                android:textColor="#110700"
                android:text="汇总表.xls
                  2018年2月10日            下午 03:47 92.22KB" />

        </TableRow>

        <TableRow
            android:id="@+id/xlstableRow4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/xlstupian_04"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:background="@drawable/xls" />

            <TextView
                android:id="@+id/xlswenjian04"
                android:layout_width="280dp"
                android:layout_height="100dp"
                android:textSize="27dp"
                android:textColor="#110700"
                android:text="审核表.xls
                  2018年2月7日            下午 01:47  553.0KB" />

        </TableRow>
    </TableLayout>


</android.support.constraint.ConstraintLayout>
