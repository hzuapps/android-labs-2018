<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalSpace">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/myLayout">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="12mm"
            android:id="@+id/events"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="12mm"
                android:layout_height="6mm"
                android:layout_alignParentRight="true"
                android:text="tijiao"
                android:id="@+id/summitevents"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10mm"
            android:id="@+id/event1"
            android:text="学java"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10mm"
            android:id="@+id/event2"
            android:text="学typescript"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10mm"
            android:id="@+id/event3"
            android:text="学汇编"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10mm"
            android:id="@+id/event4"
            android:text="学数据库"/>


    </android.support.v7.widget.LinearLayoutCompat>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1mm"
        android:id="@+id/show_result"
        android:layout_marginRight="1mm" />

</android.support.constraint.ConstraintLayout>