<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.hzuapps.androidlabs.Soft1614080902122.SecondActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_second" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_dialog_email" />

    <RelativeLayout
        android:id="@+id/activity_soft16140800902122"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="edu.hzuapps.androidlabs.Soft1614080902122.soft16140800902122Activity">


        <ImageView
            android:id="@+id/img_A"
            android:layout_width="200pt"
            android:layout_height="60pt"
            android:src="@drawable/pic"
            android:layout_above="@+id/img_B"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="14dp" />


        <ImageView
            android:id="@+id/img_C"
            android:layout_width="25pt"
            android:layout_height="25pt"
            android:layout_alignTop="@+id/img_B"
            android:layout_centerHorizontal="true"
            android:src="@drawable/p3" />


        <ImageView
            android:id="@+id/img_B"
            android:layout_width="25pt"
            android:layout_height="25pt"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/p2"
            android:layout_marginBottom="13dp"
            android:layout_above="@+id/textview_01"
            android:layout_alignLeft="@+id/img_E"
            android:layout_alignStart="@+id/img_E" />

        <TextView
            android:id="@+id/textview_02"
            android:layout_width="150px"
            android:layout_height="50px"
            android:layout_alignLeft="@+id/img_D"
            android:layout_alignStart="@+id/img_D"
            android:layout_centerVertical="true"
            android:width="500px"
            android:height="700px"
            android:text="阅读理解" />

        <TextView
            android:id="@+id/textview_01"
            android:layout_width="200px"
            android:layout_height="60px"
            android:layout_alignLeft="@+id/img_C"
            android:layout_alignStart="@+id/img_C"
            android:layout_centerVertical="true"
            android:width="500px"
            android:height="700px"
            android:text="听力读写" />

        <TextView
            android:id="@+id/textview_3"
            android:layout_width="150px"
            android:layout_height="50px"
            android:layout_alignLeft="@+id/img_B"
            android:layout_alignStart="@+id/img_B"
            android:layout_centerVertical="true"
            android:width="500px"
            android:height="700px"
            android:text="单词背诵" />

        <TextView
            android:id="@+id/textview_05"
            android:layout_width="200px"
            android:layout_height="60px"
            android:width="500px"
            android:height="700px"
            android:text="精品课程"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/textview_01"
            android:layout_toLeftOf="@+id/textview_06"
            android:layout_toStartOf="@+id/textview_06" />

        <ImageView
            android:id="@+id/img_D"
            android:layout_width="25pt"
            android:layout_height="25pt"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/img_C"
            android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp"
            android:src="@drawable/p6" />

        <ImageView
            android:id="@+id/img_E"
            android:layout_width="65pt"
            android:layout_height="65pt"
            android:src="@drawable/p7"
            android:layout_below="@+id/textview_05"
            android:layout_toLeftOf="@+id/textview_01"
            android:layout_toStartOf="@+id/textview_01"
            android:layout_marginTop="17dp" />

        <TextView
            android:id="@+id/textview_06"
            android:layout_width="250px"
            android:layout_height="50px"
            android:layout_alignEnd="@+id/img_E"
            android:layout_alignRight="@+id/img_E"
            android:layout_below="@+id/img_E"
            android:layout_marginTop="14dp"
            android:width="500px"
            android:height="700px"
            android:text="四级词根词汇速记" />

        <ImageView
            android:id="@+id/img_F"
            android:layout_width="65pt"
            android:layout_height="65pt"
            android:layout_alignEnd="@+id/textview_02"
            android:layout_alignRight="@+id/textview_02"
            android:layout_alignTop="@+id/img_E"
            android:src="@drawable/p7" />

        <TextView
            android:id="@+id/textview_07"
            android:layout_width="250px"
            android:layout_height="50px"
            android:layout_alignEnd="@+id/img_F"
            android:layout_alignRight="@+id/img_F"
            android:layout_below="@+id/img_F"
            android:layout_marginTop="14dp"
            android:width="500px"
            android:height="700px"
            android:text="四级真题阅读讲解" />


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
