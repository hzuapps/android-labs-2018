<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Com1614080901101Activity">

    <TextView
        android:id="@+id/background1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/background1" />

    <TextView
        android:id="@+id/main_title"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="打蜜蜂"
        android:textColor="#ebfa45"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/background1"
        app:layout_constraintEnd_toStartOf="@+id/background1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/background1"
        app:layout_constraintTop_toBottomOf="@+id/background1"
        app:layout_constraintVertical_bias="0.650" />

    <Button
        android:id="@+id/button_open"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="开始游戏"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <Button
        android:id="@+id/button_leaderboard"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="排行榜"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.880" />

</android.support.constraint.ConstraintLayout>