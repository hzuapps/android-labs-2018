<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".LoginActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/vi_head"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/teacher5"
        />

    <EditText
        android:id="@+id/et_user_name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="#b1faf9fc"
        android:hint="   账号   请输入用户名"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textColorHint="#a3a3a3"
        />
    <EditText
        android:id="@+id/et_psw"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#b1faf9fc"
        android:hint="   密码   请输入密码"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textColorHint="#a3a3a3"
        />
    <Button
        android:id="@+id/bt_login"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="#b14957f2"
        android:onClick="login"
        android:text="登  录"
        android:textSize="30dp"
        android:textColor="#fff"/>
    <CheckBox
        android:id="@+id/cb_isCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="记住用户名密码"
        android:textSize="20dp"
        android:textColor="#0fe6c5"
        />

</LinearLayout>