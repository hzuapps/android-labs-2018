<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".com1614080901124Activity">

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:drawableTop="@drawable/ying"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text=""
        android:id="@+id/ying"/>

    <TextView android:layout_height="250dp"
        android:layout_width="250dp"
        android:text="网剧影院"
        android:id="@+id/main_title"
        app:layout_constraintVertical_bias="0.650"
        app:layout_constraintTop_toBottomOf="@+id/ying"
        app:layout_constraintStart_toEndOf="@+id/ying"
        app:layout_constraintEnd_toStartOf="@+id/ying"
        app:layout_constraintBottom_toTopOf="@+id/ying"
        android:textSize="40sp"
        android:textColor="#8e6b23"/>

    <Button android:layout_height="50dp"
        android:layout_width="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="进入资源库" android:id="@+id/button_open1"
        app:layout_constraintVertical_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button android:layout_height="50dp"
        android:layout_width="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="添加资源" android:id="@+id/button_open2"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>