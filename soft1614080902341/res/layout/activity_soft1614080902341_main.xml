<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="androidlabs.hzuapps.edu.soft1614080902341.soft1614080902341MainActivity">


    <TextView
    android:id="@+id/textview_01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:drawableTop="@drawable/hz1"
    android:layout_centerHorizontal="true"
    android:text="剪刀石头布" />
    <Button
        android:id="@+id/but_one"
        android:text="剪刀"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textview_01"
        android:layout_marginTop="130dp"
        />
    <Button
        android:id="@+id/but_tow"
        android:text="石头"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/but_one"
        android:layout_marginTop="65dp"
        />
    <Button
        android:id="@+id/but_thr"
        android:text="布"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/but_tow"
        android:layout_marginTop="65dp"
        />



</RelativeLayout>
