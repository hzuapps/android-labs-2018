                android:text="@string/tv_eyuName"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_eyuTip"
                android:textSize="15sp"
                />

        </LinearLayout>
    </LinearLayout>

