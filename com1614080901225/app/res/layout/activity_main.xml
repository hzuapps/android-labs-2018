<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com1614080901225.androidlabs.hzuapps.edu.campushelp.MainActivity">
    >
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="20dp"
        android:text="请输入您要存储的信息:" />
    <EditText
        android:layout_width="380dp"
        android:layout_height="145dp"
        android:ems="10"
        android:id="@+id/et_info"
        android:layout_alignParentStart="true" />
    <requestFocus/>
    <Button
        android:id="@+id/btn_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="读取信息"
        android:layout_alignBottom="@+id/btn_save"
        android:layout_alignEnd="@+id/et_info"
        android:layout_marginEnd="66dp"
        android:layout_alignTop="@+id/btn_save" />


    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存信息"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/et_info"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp" />


</RelativeLayout>

