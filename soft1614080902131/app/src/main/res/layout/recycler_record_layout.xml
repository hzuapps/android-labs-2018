<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/record_on_click_linear_layout">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/recycler_record_image_view"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="14sp"
            android:text="2018-01-01 12:00:65"
            android:id="@+id/recycler_record_date_and_time_text_view"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="14sp"
            android:text="æ— "
            android:id="@+id/recycler_record_remark_text_view"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/recycler_record_picture_view"/>

    </LinearLayout>

</RelativeLayout>